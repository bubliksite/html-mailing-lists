html(lang="ru")
    head
        meta(charset="UTF-8")
        link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet")
    body
        style(type="text/css").
            body, table, td, tr, p, a {
                -webkit-text-size-adjust:none !important;-ms-text-size-adjust:100%;border-collapse: collapse;border-spacing: 0;border: 0;padding: 0;margin: 0;font-family:  'Montserrat', sans-serif;}
        table(border="0" cellpadding="0" cellspacing="0" width="100%" bgcolor="#d0d0d0")
            tr
                td(align="center")
                    table(width="650" bgcolor="white")
                        tr
                            td(height="50")
                        tr
                            td
                                include includes/esign/esign-header
                                include includes/esign/esign-body
                        tr
                            td(height="50")